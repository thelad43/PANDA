@model IEnumerable<ReceiptServiceModel>

@{
    ViewData["Title"] = "My Receipts";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<hr style="height:1px;background-color:#333;" />

<table class="table table-bordered table-hover table-light">
    <tr>
        <th class="col-md-1">Id</th>
        <th class="col-md-2">Fee</th>
        <th class="col-md-4">Issued On</th>
        <th class="col-md-4">Recipient</th>
        <th class="col-md-1">Actions</th>
    </tr>

    @foreach (var receipt in Model)
    {
        <tr>
            <td>@receipt.Id</td>
            <td>@receipt.Fee</td>
            <td>@receipt.IssuedOn</td>
            <td>@receipt.RecipientName</td>
            <td><a asp-area="" asp-controller="Receipts" asp-action="Details" asp-route-id="@(receipt.Id)"
                class="btn btn-dark btn-group-lg">Details</a></td>
        </tr>
    }
</table>