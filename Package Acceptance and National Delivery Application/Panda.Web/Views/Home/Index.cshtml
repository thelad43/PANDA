@model PackageListingViewModel

@{
    ViewData["Title"] = "Home Page";
}

<main class="mt-3">

    @if (User.Identity.IsAuthenticated && User.IsInRole(AdministratorRole))
    {
        <h1 class="text-center">Hello, Administrator @User.Identity.Name!</h1>
    }
    else if (User.Identity.IsAuthenticated)
    {

        <h1 class="text-center">Hello, @User.Identity.Name!</h1>
    }
    else
    {
        <div class="jumbotron mt-3 bg-panda">
            <h1 class="text-white">Welcome to PANDA Delivery Services.</h1>
            <hr class="bg-dark hr-2" />
            <h3 class="text-white"><a asp-area="Identity" asp-page="/Account/Login">Login</a> if you have an account.</h3>
            <h3 class="text-white"><a asp-area="Identity" asp-page="/Account/Register">Register</a> if you don't.</h3>
        </div>
    }

    @if (Model.IsAuthenticated)
    {
        <div class="mt-3">
            <hr class="hr-2 bg-dark">
            <br />
            <div class="row text-panda">
                <div class="col-4">
                    <div class="mr-5">
                        <h3 class="text-center">Pending</h3>
                        <br />
                        <div class="border-panda p-3">
                            <partial name="_PackagesPartial.cshtml" for="@(Model.Pending)" />
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="mx-5">
                        <h3 class="text-center">Shipped</h3>
                        <br />
                        <div class="border-panda p-3">
                            <partial name="_PackagesPartial.cshtml" for="@(Model.Shipped)" />
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="ml-5">
                        <h3 class="text-center">Delivered</h3>
                        <br />
                        <div class="border-panda p-3">
                            <partial name="_PackagesPartial.cshtml" for="@(Model.Delivered)" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</main>